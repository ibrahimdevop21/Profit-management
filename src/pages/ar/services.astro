---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLocaleFromPath } from '../../i18n';
import { loadTranslations, tSync } from '../../i18n/index.js';

const locale = getLocaleFromPath(Astro.url.pathname);
const translations = await loadTranslations(locale);

// Helper function for translations
const t = (key: string, fallback?: string) => tSync(key, locale, translations, fallback);
---

<BaseLayout title="خدماتنا - إدارة الأرباح للاستشارات والتدريب" description="حلول مالية شاملة تشمل المحاسبة والتخطيط الضريبي والاستشارات التجارية" locale={locale}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center bg-gradient-to-br from-secondary-600 via-secondary-700 to-accent-600 overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-32 h-32 bg-primary-400/20 rounded-full animate-bounce-slow"></div>
      <div class="absolute bottom-32 right-16 w-24 h-24 bg-secondary-400/20 rounded-full animate-bounce-slow" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-accent-300/30 rounded-full animate-bounce-slow" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative z-10 text-center text-white px-6 max-w-4xl mx-auto">
      <h1 class="text-5xl lg:text-6xl font-bold mb-6 animate-fade-in">
        {t('services.hero.title')}
      </h1>
      <p class="text-xl lg:text-2xl text-white max-w-3xl mx-auto leading-relaxed animate-slide-up">
        {t('services.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="section bg-white" dir="rtl">
    <div class="section-container">
      <div class="text-center mb-20">
        <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">{t('services.overview.label')}</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-text-primary mb-6 mt-2">
          {t('services.overview.title')}
        </h2>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto leading-relaxed">
          {t('services.overview.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Accounting & Bookkeeping -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.accounting.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.accounting.description')}
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.accounting.feature1')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.accounting.feature2')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.accounting.feature3')}</span>
            </li>
          </ul>
        </div>

        <!-- Tax Services -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-secondary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-secondary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.tax.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.tax.description')}
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-secondary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.tax.feature1')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-secondary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.tax.feature2')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-secondary-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.tax.feature3')}</span>
            </li>
          </ul>
        </div>

        <!-- Financial Consulting -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-accent-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-accent-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.consulting.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.consulting.description')}
          </p>
          <ul class="space-y-3 mb-8">
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-accent-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.consulting.feature1')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-accent-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.consulting.feature2')}</span>
            </li>
            <li class="flex items-center gap-3">
              <div class="w-5 h-5 bg-accent-100 rounded-full flex items-center justify-center">
                <svg class="w-3 h-3 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-text-secondary">{t('services.consulting.feature3')}</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-secondary-600 via-secondary-700 to-accent-600">
    <div class="section-container text-center">
      <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
        {t('services.cta.title')}
      </h2>
      <p class="text-xl text-secondary-100 max-w-3xl mx-auto mb-12 leading-relaxed">
        {t('services.cta.description')}
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="/ar/contact" class="btn-secondary">
          {t('services.cta.primary')}
        </a>
        <a href="/ar/about" class="btn-outline-white">
          {t('services.cta.secondary')}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
