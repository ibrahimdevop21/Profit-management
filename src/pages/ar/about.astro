---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLocaleFromPath } from '../../i18n';
import { loadTranslations, tSync } from '../../i18n/index.js';

const locale = getLocaleFromPath(Astro.url.pathname);
const translations = await loadTranslations(locale);

// Helper function for translations
const t = (key: string, fallback?: string) => tSync(key, locale, translations, fallback);
---

<BaseLayout title={t('about.title')} description={t('about.description')} locale={locale}>
  <!-- Hero Section -->
  <section class="relative min-h-[60vh] flex items-center justify-center bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 overflow-hidden">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-32 h-32 bg-secondary-400/20 rounded-full animate-bounce-slow"></div>
      <div class="absolute bottom-32 right-16 w-24 h-24 bg-accent-400/20 rounded-full animate-bounce-slow" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-secondary-300/30 rounded-full animate-bounce-slow" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative z-10 text-center text-white px-6 max-w-4xl mx-auto">
      <h1 class="text-5xl lg:text-6xl font-bold mb-6 animate-fade-in">
        {t('about.hero.title')}
      </h1>
      <p class="text-xl lg:text-2xl text-white max-w-3xl mx-auto leading-relaxed animate-slide-up">
        {t('about.hero.subtitle')}
      </p>
    </div>
  </section>

  <!-- Company Overview -->
  <section class="section bg-white">
    <div class="section-container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="animate-slide-in-left">
          <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">{t('about.story.label')}</span>
          <h2 class="text-4xl lg:text-5xl font-bold text-brand-charcoal mb-6 mt-2">
            {t('about.story.title')}
          </h2>
          <p class="text-lg text-text-secondary mb-6 leading-relaxed">
            {t('about.story.description1')}
          </p>
          <p class="text-lg text-text-secondary mb-8 leading-relaxed">
            {t('about.story.description2')}
          </p>
          <div class="flex flex-wrap gap-4">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <span class="text-text-primary font-semibold">{t('about.story.feature1')}</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="text-text-primary font-semibold">{t('about.story.feature2')}</span>
            </div>
          </div>
        </div>
        
        <div class="relative animate-slide-in-right">
          <div class="aspect-square bg-gradient-to-br from-primary-100 to-secondary-100 rounded-3xl p-8 flex items-center justify-center">
            <div class="text-center">
              <div class="w-32 h-32 bg-white rounded-full flex items-center justify-center mb-6 mx-auto shadow-brand-lg">
                <svg class="w-16 h-16 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H7m2 0v-4a2 2 0 012-2h2a2 2 0 012 2v4" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-text-primary mb-2">{t('about.story.excellence.title')}</h3>
              <p class="text-text-secondary">{t('about.story.excellence.description')}</p>
            </div>
          </div>
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-secondary-200 rounded-full opacity-20"></div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-primary-200 rounded-full opacity-30"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Values -->
  <section class="section bg-neutral-50" dir="rtl">
    <div class="section-container">
      <div class="text-center mb-20">
        <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">{t('about.values.label')}</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-brand-charcoal mb-6 mt-2">
          {t('about.values.title')}
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          {t('about.values.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Integrity -->
        <div class="bg-white rounded-3xl p-8 shadow-brand hover:shadow-brand-lg transition-all duration-300 group">
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">{t('about.values.integrity.title')}</h3>
          <p class="text-text-secondary leading-relaxed">
            {t('about.values.integrity.description')}
          </p>
        </div>

        <!-- Excellence -->
        <div class="bg-white rounded-3xl p-8 shadow-brand hover:shadow-brand-lg transition-all duration-300 group">
          <div class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-secondary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-secondary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">{t('about.values.excellence.title')}</h3>
          <p class="text-text-secondary leading-relaxed">
            {t('about.values.excellence.description')}
          </p>
        </div>

        <!-- Innovation -->
        <div class="bg-white rounded-3xl p-8 shadow-brand hover:shadow-brand-lg transition-all duration-300 group">
          <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-accent-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-accent-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">{t('about.values.innovation.title')}</h3>
          <p class="text-text-secondary leading-relaxed">
            {t('about.values.innovation.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="section bg-white" dir="rtl">
    <div class="section-container">
      <div class="text-center mb-20">
        <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">{t('about.team.label')}</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-brand-charcoal mb-6 mt-2">
          {t('about.team.title')}
        </h2>
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed">
          {t('about.team.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Team Member 1 -->
        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-48 h-48 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-full mx-auto flex items-center justify-center">
              <svg class="w-24 h-24 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-2">{t('about.team.member1.title')}</h3>
          <p class="text-secondary-600 font-semibold mb-4">{t('about.team.member1.position')}</p>
          <p class="text-text-secondary leading-relaxed">
            {t('about.team.member1.description')}
          </p>
        </div>

        <!-- Team Member 2 -->
        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-48 h-48 bg-gradient-to-br from-secondary-100 to-accent-100 rounded-full mx-auto flex items-center justify-center">
              <svg class="w-24 h-24 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-2">{t('about.team.member2.title')}</h3>
          <p class="text-secondary-600 font-semibold mb-4">{t('about.team.member2.position')}</p>
          <p class="text-text-secondary leading-relaxed">
            {t('about.team.member2.description')}
          </p>
        </div>

        <!-- Team Member 3 -->
        <div class="text-center group">
          <div class="relative mb-6">
            <div class="w-48 h-48 bg-gradient-to-br from-accent-100 to-primary-100 rounded-full mx-auto flex items-center justify-center">
              <svg class="w-24 h-24 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-2">{t('about.team.member3.title')}</h3>
          <p class="text-secondary-600 font-semibold mb-4">{t('about.team.member3.position')}</p>
          <p class="text-text-secondary leading-relaxed">
            {t('about.team.member3.description')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800">
    <div class="section-container text-center">
      <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
        {t('about.cta.title')}
      </h2>
      <p class="text-xl text-white max-w-3xl mx-auto mb-12 leading-relaxed">
        {t('about.cta.description')}
      </p>
      <div class="flex flex-col sm:flex-row gap-6 justify-center">
        <a href="/ar/contact" class="btn-secondary">
          {t('about.cta.primary')}
        </a>
        <a href="/ar/services" class="btn-outline-white">
          {t('about.cta.secondary')}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
