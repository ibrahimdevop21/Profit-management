---
// English homepage - demonstrates the bilingual system with company content
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadTranslations, tSync } from '../i18n/index.js';

const locale = 'en';
const translations = await loadTranslations(locale);

// Helper function for translations
const t = (key: string, fallback?: string) => tSync(key, locale, translations, fallback);
---

<BaseLayout
  title={t('meta.title')}
  description={t('meta.description')}
  keywords={t('meta.keywords')}
  locale={locale}
  currentPath=""
>
  <!-- Hero Section -->
  <section class="bg-brand-gradient text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, #F2B200 0%, transparent 50%), radial-gradient(circle at 75% 75%, #E1702E 0%, transparent 50%);"></div>
    </div>
    
    <div class="section-container relative">
      <div class="section py-24 md:py-32">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="animate-fade-in">
            <h1 class="text-5xl lg:text-7xl font-bold mb-8 leading-tight tracking-tight">
              {t('hero.title')}
            </h1>
            <p class="text-xl lg:text-2xl mb-10 text-white/90 leading-relaxed font-medium">
              {t('hero.subtitle')}
            </p>
            <div class="flex flex-col sm:flex-row gap-6">
              <a
                href="/contact"
                class="btn-primary text-lg px-10 py-5"
              >
                {t('hero.cta')}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a
                href="/about"
                class="btn-secondary border-white text-white hover:bg-white hover:text-primary-600 text-lg px-10 py-5"
              >
                {t('hero.cta_secondary')}
              </a>
            </div>
          </div>
          
          <!-- Hero Stats Card -->
          <div class="animate-slide-up animate-delay-200">
            <div class="bg-white/15 backdrop-blur-lg rounded-3xl p-8 shadow-2xl border border-white/20">
              <div class="grid grid-cols-2 gap-6">
                <div class="text-center p-6 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                  <div class="text-4xl font-bold mb-3 text-white">15+</div>
                  <div class="text-sm font-medium text-white uppercase tracking-wide">Years Experience</div>
                </div>
                <div class="text-center p-6 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                  <div class="text-4xl font-bold mb-3 text-white">500+</div>
                  <div class="text-sm font-medium text-white uppercase tracking-wide">Happy Clients</div>
                </div>
                <div class="text-center p-6 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                  <div class="text-4xl font-bold mb-3 text-white">24/7</div>
                  <div class="text-sm font-medium text-white uppercase tracking-wide">Support</div>
                </div>
                <div class="text-center p-6 bg-white/20 rounded-2xl backdrop-blur-sm border border-white/30">
                  <div class="text-4xl font-bold mb-3 text-white">100%</div>
                  <div class="text-sm font-medium text-white uppercase tracking-wide">Satisfaction</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section bg-white">
    <div class="section-container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
        <div class="animate-fade-in">
          <div class="mb-6">
            <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">About Us</span>
            <h2 class="text-4xl lg:text-5xl font-bold text-text-primary mb-6 mt-2">
              {t('about.title')}
            </h2>
          </div>
          <p class="text-lg text-text-secondary mb-8 leading-relaxed">
            {t('about.description')}
          </p>
          <div class="grid grid-cols-1 gap-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-text-primary mb-2 text-lg">Expert Team</h3>
                <p class="text-text-secondary">Certified professionals with years of experience in financial management and consulting</p>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
              </div>
              <div>
                <h3 class="font-bold text-text-primary mb-2 text-lg">Tailored Solutions</h3>
                <p class="text-text-secondary">Customized strategies designed specifically for your business needs and goals</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="animate-slide-up animate-delay-200">
          <div class="relative">
            <div class="bg-gradient-to-br from-primary-50 to-secondary-50 rounded-3xl p-10 shadow-lg border border-neutral-100">
              <div class="grid grid-cols-2 gap-6 mb-8">
                <div class="bg-white rounded-2xl p-6 text-center shadow-sm border border-neutral-100">
                  <div class="text-3xl font-bold text-primary-600 mb-2">98%</div>
                  <div class="text-sm font-medium text-text-secondary uppercase tracking-wide">Client Retention</div>
                </div>
                <div class="bg-white rounded-2xl p-6 text-center shadow-sm border border-neutral-100">
                  <div class="text-3xl font-bold text-primary-600 mb-2">15+</div>
                  <div class="text-sm font-medium text-text-secondary uppercase tracking-wide">Years Experience</div>
                </div>
              </div>
              <div class="text-center">
                <h3 class="text-xl font-bold text-text-primary mb-3">Trusted by Businesses</h3>
                <p class="text-text-secondary leading-relaxed">From startups to enterprises, we deliver measurable results that drive growth and profitability</p>
              </div>
            </div>
            <!-- Decorative elements -->
            <div class="absolute -top-4 -right-4 w-24 h-24 bg-secondary-200 rounded-full opacity-20"></div>
            <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-primary-200 rounded-full opacity-30"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="section bg-neutral-50">
    <div class="section-container">
      <div class="text-center mb-20">
        <span class="text-secondary-600 font-semibold text-sm uppercase tracking-wider">Our Services</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-text-primary mb-6 mt-2">
          {t('services.title')}
        </h2>
        <p class="text-xl text-text-secondary max-w-3xl mx-auto leading-relaxed">
          {t('services.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Accounting Service -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-primary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-primary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.accounting.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.accounting.description')}
          </p>
          <a href="/services" class="btn-link">
            {t('common.learn_more')}
          </a>
        </div>

        <!-- Tax Services -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-secondary-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-secondary-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.tax.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.tax.description')}
          </p>
          <a href="/services" class="btn-link">
            {t('common.learn_more')}
          </a>
        </div>

        <!-- Business Consulting -->
        <div class="service-card group">
          <div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-8 group-hover:bg-accent-600 transition-colors duration-300">
            <svg class="w-8 h-8 text-accent-600 group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-text-primary mb-4">
            {t('services.consulting.title')}
          </h3>
          <p class="text-text-secondary mb-8 leading-relaxed">
            {t('services.consulting.description')}
          </p>
          <a href="/services" class="btn-link">
            {t('common.learn_more')}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-brand-gradient text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 75%, #F2B200 0%, transparent 50%), radial-gradient(circle at 75% 25%, #E1702E 0%, transparent 50%);"></div>
    </div>
    
    <div class="section-container relative text-center">
      <h2 class="text-4xl lg:text-5xl font-bold mb-8">
        {t('contact.subtitle')}
      </h2>
      <p class="text-xl text-white/90 mb-12 max-w-3xl mx-auto leading-relaxed">
        {t('contact.description')}
      </p>
      <a
        href="/contact"
        class="btn-primary bg-white text-primary-600 hover:bg-neutral-100 text-lg px-12 py-6 shadow-2xl"
      >
        {t('contact.cta')}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
