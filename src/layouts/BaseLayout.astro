---
// Base layout component with SEO, i18n, and RTL support
// Provides consistent structure for all pages

import type { Locale } from '../i18n/index.js';
import { getTextDirection, getLanguageCode, getLocalizedPath, loadTranslations } from '../i18n/index.js';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
  title: string;
  description: string;
  locale: Locale;
  currentPath?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title, 
  description, 
  locale, 
  currentPath = '', 
  keywords = '',
  ogImage = '/profit-logo.avif'
} = Astro.props;

// Get text direction and language attributes
const dir = getTextDirection(locale);
const lang = getLanguageCode(locale);

// Load translations
const translations = await loadTranslations(locale);

// Translation helper
const t = (key: string) => {
  const keys = key.split('.');
  let value: any = translations;
  for (const k of keys) {
    value = value?.[k];
  }
  return typeof value === 'string' ? value : key;
};

// Build canonical and alternate URLs
const canonicalUrl = new URL(getLocalizedPath(locale, currentPath), Astro.site).href;
const alternateUrls = {
  en: new URL(getLocalizedPath('en', currentPath), Astro.site).href,
  ar: new URL(getLocalizedPath('ar', currentPath), Astro.site).href
};

// Font classes based on locale
const fontClass = locale === 'ar' ? 'font-arabic' : 'font-sans';
const displayFontClass = locale === 'ar' ? 'font-display-arabic' : 'font-display';
---

<!DOCTYPE html>
<html lang={lang} dir={dir} class={`scroll-smooth ${dir}`}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  {keywords && <meta name="keywords" content={keywords} />}
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Alternate Language URLs -->
  <link rel="alternate" hreflang="en" href={alternateUrls.en} />
  <link rel="alternate" hreflang="ar" href={alternateUrls.ar} />
  <link rel="alternate" hreflang="x-default" href={alternateUrls.en} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:image" content={new URL(ogImage, Astro.site).href} />
  <meta property="og:locale" content={locale === 'ar' ? 'ar_SA' : 'en_US'} />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Global Styles -->
  <link rel="stylesheet" href="/src/styles/global.css" />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Profit Management Consulting",
      "url": "https://profitmanagement.com",
      "logo": "https://profitmanagement.com/profit-logo.avif",
      "description": "Professional accounting and business consulting services for growing enterprises",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "123 Business District",
        "addressLocality": "Financial Center",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-555-123-4567",
        "contactType": "customer service",
        "email": "info@profitmanagement.com"
      },
      "sameAs": [
        "https://linkedin.com/company/profit-management",
        "https://twitter.com/profitmanagement"
      ]
    }
  </script>
</head>

<body class={`min-h-screen bg-brand-off-white text-brand-charcoal ${fontClass} antialiased`}>
  <!-- Skip to main content link for accessibility -->
  <a 
    href="#main-content" 
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50"
  >
    {locale === 'ar' ? 'انتقل إلى المحتوى الرئيسي' : 'Skip to main content'}
  </a>

  <!-- Header -->
  <header class="bg-white shadow-brand border-b border-neutral-200 sticky top-0 z-40 backdrop-blur-sm bg-white/95">
    <div class="section-container">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <div class="flex items-center">
          <a 
            href={getLocalizedPath(locale)} 
            class={`flex items-center gap-3 text-xl font-bold text-primary-600 hover:text-secondary-600 transition-colors ${displayFontClass}`}
          >
            <img 
              src="/profit-logo.avif" 
              alt="Profit Management Logo" 
              class="w-10 h-10"
              width="40"
              height="40"
            />
            <span class="hidden sm:block">
              {locale === 'ar' ? 'إدارة الأرباح' : 'Profit Management'}
            </span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="hidden md:flex items-center gap-8">
          <a 
            href={getLocalizedPath(locale)} 
            class="nav-link"
          >
            {locale === 'ar' ? 'الرئيسية' : 'Home'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'about')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'من نحن' : 'About'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'services')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'خدماتنا' : 'Services'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'contact')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'اتصل بنا' : 'Contact'}
          </a>
        </nav>

        <!-- Language Switcher -->
        <div class="flex items-center gap-4">
          <LanguageSwitcher 
            currentLocale={locale} 
            currentPath={currentPath}
            className="hidden sm:block"
          />
          
          <!-- Mobile menu button -->
          <button 
            type="button" 
            class="md:hidden p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors"
            onclick="toggleMobileMenu()"
            aria-label={locale === 'ar' ? 'فتح القائمة' : 'Open menu'}
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 py-4">
        <div class="flex flex-col gap-4">
          <a 
            href={getLocalizedPath(locale)} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'الرئيسية' : 'Home'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'about')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'من نحن' : 'About'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'services')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'خدماتنا' : 'Services'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'contact')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'اتصل بنا' : 'Contact'}
          </a>
          <div class="pt-2 border-t border-gray-200">
            <LanguageSwitcher 
              currentLocale={locale} 
              currentPath={currentPath}
            />
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 25% 25%, white 2px, transparent 2px); background-size: 50px 50px;"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
        <!-- Company Info -->
        <div class="lg:col-span-2">
          <div class="flex items-center gap-4 mb-6">
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-3 border border-white/20">
              <img 
                src="/profit-logo.avif" 
                alt="Profit Management Logo" 
                class="w-10 h-10"
                width="40"
                height="40"
              />
            </div>
            <div>
              <h3 class={`text-2xl font-bold text-white ${displayFontClass}`}>
                {t('footer.company')}
              </h3>
              <p class="text-secondary-200 text-sm mt-1">{t('footer.website')}</p>
            </div>
          </div>
          <p class="text-gray-300 mb-6 max-w-lg leading-relaxed" dir={dir}>
            {t('footer.description')}
          </p>
          
          <!-- Social Links -->
          <div class="flex gap-4">
            <a 
              href="#" 
              class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-xl p-3 border border-white/20 transition-all duration-300 hover:scale-105"
              aria-label={t('footer.social.linkedin')}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a 
              href="#" 
              class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-xl p-3 border border-white/20 transition-all duration-300 hover:scale-105"
              aria-label={t('footer.social.facebook')}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a 
              href="#" 
              class="bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-xl p-3 border border-white/20 transition-all duration-300 hover:scale-105"
              aria-label={t('footer.social.twitter')}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class={`font-bold text-lg mb-6 text-white ${displayFontClass}`} dir={dir}>
            {t('footer.quick_links')}
          </h3>
          <ul class="space-y-4">
            <li>
              <a 
                href={getLocalizedPath(locale, 'about')} 
                class="text-gray-300 hover:text-white transition-colors duration-300 flex items-center gap-2 group"
                dir={dir}
              >
                <span class="w-1 h-1 bg-secondary-400 rounded-full group-hover:w-2 transition-all duration-300"></span>
                {t('footer.about_link')}
              </a>
            </li>
            <li>
              <a 
                href={getLocalizedPath(locale, 'services')} 
                class="text-gray-300 hover:text-white transition-colors duration-300 flex items-center gap-2 group"
                dir={dir}
              >
                <span class="w-1 h-1 bg-secondary-400 rounded-full group-hover:w-2 transition-all duration-300"></span>
                {t('footer.services_link')}
              </a>
            </li>
            <li>
              <a 
                href={getLocalizedPath(locale, 'contact')} 
                class="text-gray-300 hover:text-white transition-colors duration-300 flex items-center gap-2 group"
                dir={dir}
              >
                <span class="w-1 h-1 bg-secondary-400 rounded-full group-hover:w-2 transition-all duration-300"></span>
                {t('footer.contact_link')}
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h3 class={`font-bold text-lg mb-6 text-white ${displayFontClass}`} dir={dir}>
            {t('footer.contact_info')}
          </h3>
          <div class="space-y-4">
            <div class="flex items-center gap-3 text-gray-300">
              <div class="bg-primary-600/20 rounded-lg p-2">
                <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <span>{t('footer.phone')}</span>
            </div>
            <div class="flex items-center gap-3 text-gray-300">
              <div class="bg-primary-600/20 rounded-lg p-2">
                <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <span>{t('footer.email')}</span>
            </div>
            <div class="flex items-center gap-3 text-gray-300">
              <div class="bg-primary-600/20 rounded-lg p-2">
                <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <span dir={dir}>{t('footer.hours')}</span>
            </div>
            <div class="flex items-center gap-3 text-gray-300">
              <div class="bg-primary-600/20 rounded-lg p-2">
                <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <span>{t('footer.address')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom Section -->
      <div class="border-t border-white/10 mt-12 pt-8">
        <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
          <p class="text-gray-400 text-sm" dir={dir}>
            {t('footer.copyright')}
          </p>
          <div class="flex items-center gap-6 text-sm text-gray-400">
            <span class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
              {locale === 'ar' ? 'متاح الآن' : 'Available Now'}
            </span>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    function toggleMobileMenu(): void {
      const menu = document.getElementById('mobile-menu');
      if (menu) {
        menu.classList.toggle('hidden');
      }
    }
    
    // Make function globally available
    window.toggleMobileMenu = toggleMobileMenu;
  </script>
</body>
</html>
