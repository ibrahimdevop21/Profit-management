---
// Base layout component with SEO, i18n, and RTL support
// Provides consistent structure for all pages

import type { Locale } from '../i18n/index.js';
import { getTextDirection, getLanguageCode, getLocalizedPath } from '../i18n/index.js';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

interface Props {
  title: string;
  description: string;
  locale: Locale;
  currentPath?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title, 
  description, 
  locale, 
  currentPath = '', 
  keywords = '',
  ogImage = '/profit-logo.avif'
} = Astro.props;

// Get text direction and language attributes
const dir = getTextDirection(locale);
const lang = getLanguageCode(locale);

// Build canonical and alternate URLs
const canonicalUrl = new URL(getLocalizedPath(locale, currentPath), Astro.site).href;
const alternateUrls = {
  en: new URL(getLocalizedPath('en', currentPath), Astro.site).href,
  ar: new URL(getLocalizedPath('ar', currentPath), Astro.site).href
};

// Font classes based on locale
const fontClass = locale === 'ar' ? 'font-arabic' : 'font-sans';
const displayFontClass = locale === 'ar' ? 'font-display-arabic' : 'font-display';
---

<!DOCTYPE html>
<html lang={lang} dir={dir} class={`scroll-smooth ${dir}`}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  {keywords && <meta name="keywords" content={keywords} />}
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Alternate Language URLs -->
  <link rel="alternate" hreflang="en" href={alternateUrls.en} />
  <link rel="alternate" hreflang="ar" href={alternateUrls.ar} />
  <link rel="alternate" hreflang="x-default" href={alternateUrls.en} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:image" content={new URL(ogImage, Astro.site).href} />
  <meta property="og:locale" content={locale === 'ar' ? 'ar_SA' : 'en_US'} />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(ogImage, Astro.site).href} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Global Styles -->
  <link rel="stylesheet" href="/src/styles/global.css" />
  
  <!-- Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Profit Management Consulting",
      "url": "https://profitmanagement.com",
      "logo": "https://profitmanagement.com/profit-logo.avif",
      "description": "Professional accounting and business consulting services for growing enterprises",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "123 Business District",
        "addressLocality": "Financial Center",
        "addressCountry": "US"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+1-555-123-4567",
        "contactType": "customer service",
        "email": "info@profitmanagement.com"
      },
      "sameAs": [
        "https://linkedin.com/company/profit-management",
        "https://twitter.com/profitmanagement"
      ]
    }
  </script>
</head>

<body class={`min-h-screen bg-brand-off-white text-brand-charcoal ${fontClass} antialiased`}>
  <!-- Skip to main content link for accessibility -->
  <a 
    href="#main-content" 
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md z-50"
  >
    {locale === 'ar' ? 'انتقل إلى المحتوى الرئيسي' : 'Skip to main content'}
  </a>

  <!-- Header -->
  <header class="bg-white shadow-brand border-b border-neutral-200 sticky top-0 z-40 backdrop-blur-sm bg-white/95">
    <div class="section-container">
      <div class="flex justify-between items-center h-20">
        <!-- Logo -->
        <div class="flex items-center">
          <a 
            href={getLocalizedPath(locale)} 
            class={`flex items-center gap-3 text-xl font-bold text-primary-600 hover:text-secondary-600 transition-colors ${displayFontClass}`}
          >
            <img 
              src="/profit-logo.avif" 
              alt="Profit Management Logo" 
              class="w-10 h-10"
              width="40"
              height="40"
            />
            <span class="hidden sm:block">
              {locale === 'ar' ? 'إدارة الأرباح' : 'Profit Management'}
            </span>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="hidden md:flex items-center gap-8">
          <a 
            href={getLocalizedPath(locale)} 
            class="nav-link"
          >
            {locale === 'ar' ? 'الرئيسية' : 'Home'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'about')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'من نحن' : 'About'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'services')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'خدماتنا' : 'Services'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'contact')} 
            class="nav-link"
          >
            {locale === 'ar' ? 'اتصل بنا' : 'Contact'}
          </a>
        </nav>

        <!-- Language Switcher -->
        <div class="flex items-center gap-4">
          <LanguageSwitcher 
            currentLocale={locale} 
            currentPath={currentPath}
            className="hidden sm:block"
          />
          
          <!-- Mobile menu button -->
          <button 
            type="button" 
            class="md:hidden p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors"
            onclick="toggleMobileMenu()"
            aria-label={locale === 'ar' ? 'فتح القائمة' : 'Open menu'}
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200 py-4">
        <div class="flex flex-col gap-4">
          <a 
            href={getLocalizedPath(locale)} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'الرئيسية' : 'Home'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'about')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'من نحن' : 'About'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'services')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'خدماتنا' : 'Services'}
          </a>
          <a 
            href={getLocalizedPath(locale, 'contact')} 
            class="text-gray-700 hover:text-primary-600 font-medium transition-colors"
          >
            {locale === 'ar' ? 'اتصل بنا' : 'Contact'}
          </a>
          <div class="pt-2 border-t border-gray-200">
            <LanguageSwitcher 
              currentLocale={locale} 
              currentPath={currentPath}
            />
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <!-- Company Info -->
        <div class="md:col-span-2">
          <div class="flex items-center gap-3 mb-4">
            <img 
              src="/profit-logo.avif" 
              alt="Profit Management Logo" 
              class="w-8 h-8"
              width="32"
              height="32"
            />
            <span class="text-xl font-bold">
              {locale === 'ar' ? 'إدارة الأرباح للاستشارات' : 'Profit Management Consulting'}
            </span>
          </div>
          <p class="text-gray-300 mb-4 max-w-md">
            {locale === 'ar' 
              ? 'خدمات محاسبية واستشارات أعمال احترافية للمؤسسات النامية.'
              : 'Professional accounting and business consulting services for growing enterprises.'
            }
          </p>
        </div>

        <!-- Quick Links -->
        <div>
          <h3 class="font-semibold mb-4">
            {locale === 'ar' ? 'روابط سريعة' : 'Quick Links'}
          </h3>
          <ul class="space-y-2">
            <li>
              <a 
                href={getLocalizedPath(locale, 'about')} 
                class="text-gray-300 hover:text-white transition-colors"
              >
                {locale === 'ar' ? 'من نحن' : 'About Us'}
              </a>
            </li>
            <li>
              <a 
                href={getLocalizedPath(locale, 'services')} 
                class="text-gray-300 hover:text-white transition-colors"
              >
                {locale === 'ar' ? 'خدماتنا' : 'Our Services'}
              </a>
            </li>
            <li>
              <a 
                href={getLocalizedPath(locale, 'contact')} 
                class="text-gray-300 hover:text-white transition-colors"
              >
                {locale === 'ar' ? 'اتصل بنا' : 'Contact Us'}
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact Info -->
        <div>
          <h3 class="font-semibold mb-4">
            {locale === 'ar' ? 'معلومات التواصل' : 'Contact Info'}
          </h3>
          <ul class="space-y-2 text-gray-300">
            <li>+1 (555) 123-4567</li>
            <li>info@profitmanagement.com</li>
            <li>
              {locale === 'ar' 
                ? 'الاثنين-الجمعة: 9:00 ص - 6:00 م'
                : 'Mon-Fri: 9:00 AM - 6:00 PM'
              }
            </li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
        <p>
          {locale === 'ar' 
            ? '© 2024 إدارة الأرباح للاستشارات. جميع الحقوق محفوظة.'
            : '© 2024 Profit Management Consulting. All rights reserved.'
          }
        </p>
      </div>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    function toggleMobileMenu(): void {
      const menu = document.getElementById('mobile-menu');
      if (menu) {
        menu.classList.toggle('hidden');
      }
    }
    
    // Make function globally available
    window.toggleMobileMenu = toggleMobileMenu;
  </script>
</body>
</html>
